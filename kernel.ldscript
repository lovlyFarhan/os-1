/* Script for -z combreloc: combine and sort reloc sections */
OUTPUT_FORMAT("elf32-littlearm", "elf32-bigarm",
	      "elf32-littlearm")
OUTPUT_ARCH(arm)
ENTRY(_start)
SEARCH_DIR("/opt/local/arm-none-eabi/lib");
SECTIONS
{
    . = 0x00000000;

    .vectors : { *(vectors) }

    . = 0x00008000;

    .text : {
        *(.text) *(fib)
    }

    . = ALIGN(CONSTANT (MAXPAGESIZE)) + (. & (CONSTANT (MAXPAGESIZE) - 1));

    .data : {
        *(.data)
    }

    .bss : {
        *(.bss)
    }
}
